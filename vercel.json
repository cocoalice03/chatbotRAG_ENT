{
  "builds": [
    {
      "src": "static/**",
      "use": "@vercel/static"
    },
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": { "installCommand": "pip install -r requirements.txt" }
    }
  ],
  "routes": [
    { "src": "^/static/(.*)$", "dest": "/static/$1" },
    { "src": "^(.*)$", "dest": "api/index.py" }
  ]
}
